<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/boat"/>
    <TextView
        android:id="@+id/vibrant"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="Vibrant"/>

    <TextView
        android:id="@+id/vibrantDark"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="Vibrant Dark"/>

    <TextView
        android:id="@+id/vibrantLight"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="Vibrant Light"/>

    <TextView
        android:id="@+id/muted"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="Muted"/>

    <TextView
        android:id="@+id/mutedDark"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="Muted Dark"/>

    <TextView
        android:id="@+id/mutedLight"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="Muted Light"/>

</LinearLayout>